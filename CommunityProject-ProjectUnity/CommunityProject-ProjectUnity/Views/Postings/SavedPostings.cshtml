@model IEnumerable<CommunityProject_ProjectUnity.Models.Applicant>

@{
    ViewBag.Title = "Saved Postings";
}

<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

<h2>SavedPostings</h2>

<div class="container-fluid">
    <div class="col-md-12">
        <table id="dataTable" class="table table-striped table-bordered nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th> Name</th>
                    <th>Closing Date</th>
                    <th>Salary Type</th>
                    <th>Salary</th>
                    <th>FTE</th>
                    <th>Openings</th>
                    <th>Apply</th>
                    <th>Details</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {

                    foreach (var pos in app.Postings)
                    {
                        <tr>
                            <td>@pos.Name</td>
                            <td>@pos.ClosingDate</td>
                            <td>@pos.SalaryType</td>
                            <td>@pos.Salary</td>
                            <td>@pos.FTE</td>
                            <td>@pos.Openings</td>
                            <td>
                                    @Html.ActionLink("Apply", "Create", "Applications", new { id = pos.ID }, null)

                                </td>
                                <td>
                                    @Html.ActionLink("View More Details", "Details", "Postings", new { id = pos.ID }, null)
                                </td>
                        </tr>
                    }


                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "pageLength": 50,
                language: {
                    searchPlaceholder: "Type here to Search"
                }

            });
        });
    </script>
}

